# Flask Configuration
FLASK_APP=backend/run.py
FLASK_ENV=development
SECRET_KEY=change-this-secret-key-in-production

# Database Configuration
DATABASE_URL=postgresql://galia_user:dev_password@localhost:5432/galia_db

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:5000

# Backup Configuration (optional)
BACKUP_ENABLED=False
BACKUP_SCHEDULE=0 2 * * *

# FUdo API Integration
FUDO_API_BASE_URL=https://integrations.fu.do/fudo/v1
FUDO_CLIENT_ID=your_client_id_here
FUDO_CLIENT_SECRET=your_client_secret_here
FUDO_WEBHOOK_SECRET=your_webhook_secret_here
FUDO_SYNC_ENABLED=False
